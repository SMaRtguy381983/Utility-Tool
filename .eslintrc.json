{
	"env": {
		"node": true
	},
	"extends": "airbnb",
	"plugins": [
        "react"
    ],
	"rules": {
		"import/no-extraneous-dependencies": [
			"error", {"optionalDependencies": false, "peerDependencies": false}
		],
		"no-unused-vars": ["error", { "varsIgnorePattern": "[iI]gnored" }],
		"new-cap": 0,
		"prefer-template": 0,
		"global-require": 0,
		"no-console": ["error", { "allow": ["error", "log", "warn"] }]
	},
	"globals": {
		"describe": true,
		"it": true,
		"afterEach": true,
		"beforeEach": true
	}
}
